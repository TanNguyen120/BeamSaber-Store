<div class='site-content'>
  <main class='site-main main-container no-sidebar'>
    <div class='container'>
      <div class='breadcrumb-trail breadcrumbs'>
        <ul class='trail-items breadcrumb'>
          <li class='trail-item trail-begin'>
            <a href='/'>
              <span>
                Home
              </span>
            </a>
          </li>
          <li class='trail-item trail-end active'>
            <span>
              Shopping Cart
            </span>
          </li>
        </ul>
      </div>
      <div class='row'>
        <div class='main-content-cart main-content col-sm-12'>
          <h3 class='custom_blog_title'>
            Shopping Cart
          </h3>
          <div class='page-main-content'>
            <div class='shoppingcart-content'>
              <form class='cart-form'>
                <table class='shop_table'>
                  <thead>
                    <tr>
                      <th class='product-remove'></th>
                      <th class='product-thumbnail'></th>
                      <th class='product-name'></th>
                      <th class='product-price'></th>
                      <th class='product-quantity'></th>
                      <th class='product-subtotal'></th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each itemsInCart.rows}}
                      <div id='cartId' style='display: none;'>{{cart_id}}</div>
                      <tr class='cart_item'>
                        <td class='product-remove'>
                          <a class='remove-item-from-cart'>
                          </a>
                          {{! <a href='#' class='remove'></a> }}
                        </td>
                        <td class='product-thumbnail'>
                          <a href='#'>
                            <img
                              src='{{'product.link_picture'}}'
                              alt='img'
                              class='attachment-shop_thumbnail size-shop_thumbnail wp-post-image'
                            />
                          </a>
                        </td>
                        <td class='product-name' data-title='Product'>
                          <a href='#' class='title'>{{'product.name'}}</a>
                          <span
                            class='attributes-select attributes-color'
                          >{{'product.universe'}},</span>
                          <span
                            class='attributes-select attributes-size'
                          >{{'product.grade'}}</span>
                        </td>
                        <td class='product-quantity' data-title='Quantity'>
                          <div class='quantity'>
                            <div class='control'>
                              <a
                                class='btn-number qtyminus quantity-minus'
                                href='#'
                              >-</a>
                              <input
                                type='text'
                                data-step='1'
                                data-min='0'
                                value='{{quantity}}'
                                title='Qty'
                                class='input-qty qty'
                                size='4'
                              />
                              <a
                                href='#'
                                class='btn-number qtyplus quantity-plus'
                              >+</a>
                            </div>
                          </div>
                        </td>
                        <td class='product-price' data-title='Price'>
                          <span
                            class='cart-product-id'
                            style='display: none;'
                          >{{product_id}}</span>
                          <span class='woocommerce-Price-amount amount'>
                            <span class='woocommerce-Price-currencySymbol'>
                              $
                            </span>
                            {{total_cost}}
                          </span>
                        </td>
                      </tr>
                    {{/each}}
                  </tbody>
                </table>
              </form>
              <div
                class='control-cart'
                style='font-size:large; color:red'
                id='cart-total-cost'
              >
                Total Cost: ${{cart.total_cost}}
              </div>
              <div class='control-cart'>
                <a href='/product'>
                  <button class='continueShop' id='continueShop'>
                    Continue Shopping
                  </button>
                </a>
                <button class='button btn-cart-to-checkout'>
                  Checkout
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>